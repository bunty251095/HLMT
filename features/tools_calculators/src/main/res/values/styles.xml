<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolsSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/vivant_charcoal_grey</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dax_font</item>
    </style>

    <style name="ToolsText">
        <item name="android:fontFamily">@font/dax_font</item>
    </style>

    <style name="ToolsTabLayout">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DatePickerStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:divider">@color/colorPrimary</item>
    </style>

    <style name="spinnerStyle" parent="@style/Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:fontFamily">@font/dax_font</item>
    </style>

    <style name="layoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="paddingEnd">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
    </style>

<!--    <style name="NumberPickerText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="colorControlNormal">@color/vivant_marigold</item>
        <item name="android:dividerHeight">@dimen/_3sdp</item>
    </style>-->

    <style name="CustomEdittextDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/selector_text_color</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="background">@drawable/selector_dialog_edittext</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="fontFamily">@font/dax_font</item>
    </style>

    <style name="ToolsBtnSelection">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:drawableRight">@drawable/ic_close</item>
        <item name="fontFamily">@font/dax_font</item>
        <item name="android:background">@drawable/border_button_outline_selection</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/colorPrimary</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="ToolsBtnDeselection">
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/_3sdp</item>
        <item name="android:drawableRight">@drawable/add</item>
        <item name="fontFamily">@font/dax_font</item>
        <item name="android:background">@drawable/button_deselction</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/vivant_charcoal_grey</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="ToolsToggleLeft" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="background">@drawable/sw_on</item>
        <item name="android:checked">true</item>
        <item name="android:text">No</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/dax_font</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/sw_text</item>
        <item name="android:button">@null</item>
    </style>

    <style name="ToolsToggleRight" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="background">@drawable/sw_on</item>
        <item name="android:checked">false</item>
        <item name="android:text">Yes</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/dax_font</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/sw_text</item>
        <item name="android:button">@null</item>
    </style>

    <style name="ToolsDialogTabLayout">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/dax_font</item>
    </style>

</resources>