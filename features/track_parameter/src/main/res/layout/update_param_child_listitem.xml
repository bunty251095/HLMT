<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp">

        <EditText
                android:id="@+id/editTextDateChildELUP"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_border"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:hint="1/10/2015"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/_15sdp"
                android:text=""
                android:textColor="@color/textViewColor" />

        <ImageView
                android:id="@+id/imgCalender"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_4sdp"
                android:tint="@color/vivantCyan"
                android:src="@drawable/icon_calendar" />

    </RelativeLayout>

    <!--<Spinner
            android:id="@+id/spn_unit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/default_10dp"
            android:layout_marginTop="@dimen/default_16dp"
            android:visibility="gone"
            android:background="@android:color/darker_gray"
            android:entries="@array/arr_units"
            android:prompt="@string/sp_prompt_unit" />-->

    <LinearLayout
            android:id="@+id/lltUpdateValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_border"
            android:orientation="vertical"
            android:visibility="visible">

        <TextView
                android:id="@+id/txtChildLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_10dp"
                android:paddingTop="5dp"
                android:text="test"
                android:textColor="@color/textViewColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        <EditText
                android:id="@+id/edtChildValues"
                style="@style/CustomEdittext"
                android:background="@null"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:imeOptions="actionDone"
                android:maxLength="10"/>

        <!--        <EditText
                    android:id="@+id/edtChildValues"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:paddingLeft="20dp"
                    android:text=""
                    android:textColor="@color/textViewColor"
                    android:textColorHint="@color/textViewColor"
                    android:visibility="visible" />-->
    </LinearLayout>
</LinearLayout>