    <!--TEXTVIEW STYLE-->
    <style name="CustomTextviewHRA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_16dp</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>

    <style name="CustomButtonMedication">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_border_button</item>
        <item name="android:textColor">@color/selector_text_color</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


