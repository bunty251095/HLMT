<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.caressa.security.viewmodel.SignUpViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <com.caressa.common.view.ArcImageView
                    android:id="@+id/img_signup_heart"
                    app:isTemplate="true"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_heart"
                    android:tint="@color/colorPrimary"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.caressa.common.view.ArcTextView
                    android:id="@+id/lbl_signup"
                    app:isTemplate="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SIGN_UP"
                    android:layout_gravity="center"
                    style="@style/CustomTextviewBold"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="@dimen/_18sdp"
                    app:layout_constraintTop_toBottomOf="@+id/img_signup_heart"
                    app:layout_constraintEnd_toEndOf="@+id/img_signup_heart"
                    app:layout_constraintStart_toStartOf="@+id/img_signup_heart" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_btn_social_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_signup">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/btn_signup_facebook"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="center"
                        android:background="@drawable/btn_fill_normal"
                        android:backgroundTint="@color/security_dusky_blue">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/img_fb" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/FACEBOOK"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/vivantWhite" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/btn_signup_googleplus"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_fill_normal"
                        android:backgroundTint="@color/security_pale_red"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/img_gplus" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/GOOGLE"
                            android:textColor="@color/vivantWhite"
                            android:textSize="@dimen/_13sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <RelativeLayout
                    android:id="@+id/layout_signup_or"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_28sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_btn_social_signup">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_centerInParent="true"
                        android:background="@color/vivantInactive" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextview"
                        android:layout_centerInParent="true"
                        android:background="@color/vivantWhite"
                        android:textStyle="bold"
                        android:textColor="@color/security_steel_grey"
                        android:textSize="@dimen/_14sdp"
                        android:text=" Or " />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_edt_signup_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_28sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_signup_or"
                    app:layout_constraintStart_toStartOf="@+id/layout_signup_or"
                    app:layout_constraintEnd_toEndOf="@+id/layout_signup_or">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:tint="@color/security_grey_light"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/til_edt_signup_name"
                        android:src="@drawable/img_name" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_edt_signup_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="false"
                        app:hintEnabled="false"
                        style="@style/VivantTextInputLayoutStyle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_signup_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/VivantEditTextStyle"
                            android:paddingStart="@dimen/_40sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            android:hint="@string/NAME_COMPULSARY"
                            android:textSize="@dimen/_12sdp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_edt_signup_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_edt_signup_name"
                    app:layout_constraintStart_toStartOf="@+id/layout_edt_signup_name"
                    app:layout_constraintEnd_toEndOf="@+id/layout_edt_signup_name">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_phone"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:tint="@color/security_grey_light"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/til_edt_signup_phone"
                        android:src="@drawable/img_phone" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_edt_signup_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="false"
                        app:hintEnabled="false"
                        style="@style/VivantTextInputLayoutStyle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_signup_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/VivantEditTextStyle"
                            android:paddingStart="@dimen/_40sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            android:hint="@string/PHONE_OPTIONAL"
                            android:textSize="@dimen/_12sdp"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_edt_signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_edt_signup_phone"
                    app:layout_constraintStart_toStartOf="@+id/layout_edt_signup_phone"
                    app:layout_constraintEnd_toEndOf="@+id/layout_edt_signup_phone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_signup_email"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:tint="@color/security_grey_light"
                        android:layout_marginTop="@dimen/_6sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/til_edt_signup_emailaddress"
                        android:src="@drawable/img_email" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_edt_signup_emailaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="false"
                        app:hintEnabled="false"
                        style="@style/VivantTextInputLayoutStyle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_signup_emailaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/VivantEditTextStyle"
                            android:paddingStart="@dimen/_40sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            android:hint="@string/EMAIL_COMPULSARY"
                            android:textSize="@dimen/_12sdp"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_validation_email"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:visibility="gone"
                        android:src="@drawable/img_validation_tick"
                        android:tint="@color/vivantGreen"
                        app:layout_constraintTop_toBottomOf="@+id/til_edt_signup_emailaddress"
                        app:layout_constraintEnd_toEndOf="@+id/til_edt_signup_emailaddress" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_edt_signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_edt_signup_email"
                    app:layout_constraintStart_toStartOf="@+id/layout_edt_signup_email"
                    app:layout_constraintEnd_toEndOf="@+id/layout_edt_signup_email">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_signup_password"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:tint="@color/security_grey_light"
                        android:layout_marginTop="@dimen/_7sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/til_edt_signup_password"
                        app:srcCompat="@drawable/img_password" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_edt_signup_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/security_grey_light"
                        app:hintEnabled="false"
                        style="@style/VivantTextInputLayoutStyle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_signup_password"
                            style="@style/VivantEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/PASSWORD_COMPULSARY"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:maxLength="30"
                            android:paddingStart="@dimen/_40sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            android:textSize="@dimen/_12sdp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_tick_password"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/img_validation_tick"
                        android:tint="@color/vivantGreen"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/til_edt_signup_password"
                        app:layout_constraintTop_toBottomOf="@+id/til_edt_signup_password"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_password_info"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="@color/colorPrimary"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_edt_signup_password"
                    app:layout_constraintStart_toStartOf="@+id/layout_edt_signup_password"/>

                <com.caressa.common.view.ArcButton
                    android:id="@+id/btn_signup"
                    app:isTemplate="true"
                    style="@style/CustomButton"
                    android:text="@string/SIGN_UP"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@+id/layout_edt_signup_password"
                    app:layout_constraintStart_toStartOf="@+id/layout_edt_signup_password"
                    app:layout_constraintTop_toBottomOf="@+id/img_password_info" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_signup_termsofservice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="@string/TERMS_OF_SERVICE_SIGNUP"
                    android:textColor="#797e7d"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_signup"
                    app:layout_constraintStart_toStartOf="@+id/btn_signup"
                    app:layout_constraintTop_toBottomOf="@+id/btn_signup"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>