<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_security_feature"
    app:startDestination="@id/loginSelectionFragment">

    <activity
        android:id="@+id/splash_activity"
        tools:layout="@layout/activity_splash_screen"
        android:name="com.caressa.security.ui.SplashScreenActivity" />


    <fragment
        android:id="@+id/loginViaOTPFragment"
        android:name="com.caressa.security.ui.LoginWithOtpFragment"
        android:label="LoginViaOTPFragment"
        tools:layout="@layout/fragment_login_with_otp">

        <action
            android:id="@+id/action_loginViaOTPFragment_to_main_activity"
            app:destination="@id/splash_activity"/>

        <action
            android:id="@+id/action_loginViaOTPFragment_to_user_info_screen"
            app:destination="@id/userDetailsFragment">
            <argument
                android:name="mobileNo"
                app:argType="string"
                android:defaultValue=" "/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/loginSelectionFragment"
        android:name="com.caressa.security.ui.LoginSelectionFragment"
        tools:layout="@layout/fragment_account_selection">

        <action
            android:id="@+id/action_loginSelctionToStepOneFragment"
            app:destination="@id/stepOneFragment"/>

        <action
            android:id="@+id/action_loginSelectionToTermsAndCondition"
            app:destination="@+id/termsAndConditionFragment"/>

        <action
            android:id="@+id/action_loginSelectionToPrivacyPolicyFragment"
            app:destination="@+id/privacyPolicyFragment"/>

    </fragment>

    <fragment
        android:id="@+id/stepOneFragment"
        android:name="com.caressa.security.ui.HlmtStepOneFragment"
        android:label="HLMT Login"
        tools:layout="@layout/fragment_hlmt_step_one">

        <action
            android:id="@+id/action_stepOneFragmentToLoginWithOtpfragment"
            app:destination="@+id/loginViaOTPFragment"/>

        <action
            android:id="@+id/action_stepOneFragmentToHLMTLoginFragment"
            app:destination="@+id/hlmtLoginFragment"/>

    </fragment>

    <fragment
        android:id="@+id/hlmtLoginFragment"
        android:name="com.caressa.security.ui.HlmtLoginFragment"
        tools:layout="@layout/fragment_hlmt_login">

        <action
            android:id="@+id/action_login_fragment_to_user_detail_fragment"
            app:destination="@id/userDetailsFragment">

            <argument
                android:name="hlmtUserID"
                app:argType="string"
                android:defaultValue=" "/>

            <argument
                android:name="hlmtEmployeeID"
                app:argType="string"
                android:defaultValue=" "/>

            <argument
                android:name="loginStatus"
                app:argType="string"
                android:defaultValue=" "/>

            <argument
                android:name="isRegister"
                app:argType="string"
                android:defaultValue="true"/>

            <argument
                android:name="mobileNo"
                app:argType="string"
                android:defaultValue=" "/>
        </action>

        <action
            android:id="@+id/action_hlmtloginfragment_to_mainactivity"
            app:destination="@id/splash_activity"/>

    </fragment>

    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.caressa.security.ui.UserDetailsFragment"
        android:label="User Information"
        tools:layout="@layout/fragment_user_details">

        <argument
            android:name="mobileNo"
            app:argType="string"
            android:defaultValue=""/>

        <argument
            android:name="hlmtUserID"
            app:argType="string"
            android:defaultValue=""/>

        <argument
            android:name="hlmtEmployeeID"
            app:argType="string"
            android:defaultValue=""/>

        <argument
            android:name="loginStatus"
            app:argType="string"
            android:defaultValue=""/>

        <argument
            android:name="isRegister"
            app:argType="string"
            android:defaultValue="true"/>

        <action
            android:id="@+id/action_userDetailsToHomeScreen"
            app:destination="@id/splash_activity"/>

    </fragment>

    <!--// Old flow-->

    <fragment
        android:id="@+id/termsAndConditionFragment"
        android:name="com.caressa.security.ui.TermsAndConditionFragment"
        android:label="TermsAndConditionFragment"
        tools:layout="@layout/fragment_terms_and_condition">
    </fragment>

    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="com.caressa.security.ui.PrivacyPolicyFragment"
        android:label="@string/PRIVACY_POLICY"
        tools:layout="@layout/fragment_terms_and_condition">
    </fragment>

    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.caressa.security.ui.UserInfoFragment"
        android:label="UserInfoFragment"
        tools:layout="@layout/fragment_user_info">

        <argument android:name="name" app:argType="string"/>
        <argument android:name="mobileNo" app:argType="string"/>
        <argument android:name="passCode" app:argType="string"/>
        <argument android:name="email" app:argType="string"/>

        <action
            android:id="@+id/action_userInfoFragment_to_main_activity"
            app:destination="@id/splash_activity" />

    </fragment>

   <!-- <fragment
        android:id="@+id/stepTwoFragment"
        android:name="com.caressa.security.ui.HlmtStepTwoFragment"
        android:label="HLMT Login"
        tools:layout="@layout/fragment_hlmt_step_two">

        <action
            android:id="@+id/action_stepTwoFragmentToLoginWithOtpFragment"
            app:destination="@+id/loginViaOTPFragment"/>


    </fragment>-->



</navigation>